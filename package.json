{
  "name": "nestjs-amo",
  "version": "0.1.0",
  "description": "Wrapper over the @shevernitskiy/amo library for interacting with the amoCRM API from a NestJS application.",
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc -p tsconfig.lib.json",
    "prepare": "npm run build",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "eslint  \"lib/**/*.ts\" --fix",
    "changelog": "npx conventional-changelog-cli conventional-changelog -p angular -i ./CHANGELOG.md -s"
  },
  "keywords": [
    "nestjs",
    "amocrm",
    "kommo",
    "api",
    "oauth2.0"
  ],
  "author": "Yaroslav Tolstoy <t.me/yatolstoy>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/yatolstoy/nestjs-amo.git"
  },
  "bugs": {
    "url": "https://github.com/yatolstoy/nestjs-amo/issues"
  },
  "homepage": "https://github.com/yatolstoy/nestjs-amo#readme",
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.0",
    "@shevernitskiy/amo": "^0.1.0 || ^0.2.0"
  },
  "devDependencies": {
    "@shevernitskiy/amo": "^0.2.9",
    "@nestjs/common": "10.3.7",
    "@types/node": "^16.18.25",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "prettier": "3.2.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.1.3"
  }
}